<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="LendFiles">
	
	<!-- 사진 업로드 -->
	<insert id="upload">
		insert into lendfiles values(lendfiles_seq.nextval,#{oriName},#{sysName},#{parentSeq},sysdate)
	</insert>
	
	<!-- 사진가져오기 -->
	<select id="selectOne" parameterType="hashmap" resultType="kh.spring.dto.LendFilesDTO">
		<foreach collection="parentSeq" item="seq" open="(" close=")" separator="or">
		select * from (select rownum, A.* from(select * from lendfiles where parentseq = #{seq.value} order by seq asc) A where rownum = 1) order by seq desc
		</foreach>
	</select> 
	
	<!-- 사진 리스트(부모) -->
	<select id="selectAll" resultType="kh.spring.dto.LendFilesDTO">
		select * from lendfiles where parentSeq=#{value} order by seq asc
	</select>
	
	<!-- 사진 이름 -->
	<select id="sysName" resultType="kh.spring.dto.LendFilesDTO">
		select sysname from lendfiles where seq=#{value}
	</select>
	
	<!-- 사진 삭제 -->
	<delete id="delete">
		delete from lendfiles where seq=#{value}
	</delete>
	

</mapper>